<h1>Listing exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Youtubelink</th>
      <th>Giflink</th>
      <th>Instructions</th>
      <th>Muscles</th>
      <th>Massinstructions</th>
      <th>Cutinstructions</th>
      <th>Staminainstructions</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.YoutubeLink %></td>
        <td><%= exercise.GifLink %></td>
        <td><%= exercise.instructions %></td>
        <td><%= exercise.muscles %></td>
        <td><%= exercise.MassInstructions %></td>
        <td><%= exercise.CutInstructions %></td>
        <td><%= exercise.StaminaInstructions %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

